rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que cualquiera lea imágenes, necesario para mostrarlas en la tienda.
    match /products/{imageId} {
      allow read: if true;
      // Solo permite escribir (subir, borrar, actualizar) a usuarios autenticados.
      // Esta es una regla de seguridad básica pero funcional para este caso de uso.
      allow write: if request.auth != null;
    }
  }
}
