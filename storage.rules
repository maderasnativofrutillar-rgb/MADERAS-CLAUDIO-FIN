rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para la carpeta de imágenes de productos
    match /products/{imageName} {
      // Cualquiera puede leer (ver) las imágenes de los productos.
      allow read: if true;
      
      // Solo los usuarios autenticados con rol de 'admin' o 'supervisor' pueden escribir (subir, actualizar, borrar).
      allow write: if request.auth != null && (
                     firestore.get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
                     firestore.get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'supervisor'
                   );
    }
  }
}
