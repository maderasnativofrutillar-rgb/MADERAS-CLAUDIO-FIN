rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permite la lectura pública para la colección de productos
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Permite la lectura pública para la configuración de imágenes del sitio
    match /siteConfig/{docId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Regla de respaldo: denegar todo lo demás por defecto.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}