rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir la lectura pública de productos y configuración del sitio.
    // Esto es necesario para que el servidor de Next.js pueda renderizar las páginas.
    match /products/{productId} {
      allow get, list: if true;
      // Solo los usuarios autenticados pueden crear, actualizar o eliminar productos.
      allow write: if request.auth != null;
    }

    match /siteConfig/{docId} {
       allow get, list: if true;
       // Solo los usuarios autenticados pueden cambiar la configuración.
       allow write: if request.auth != null;
    }
  }
}
