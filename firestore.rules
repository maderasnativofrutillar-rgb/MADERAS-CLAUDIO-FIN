rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC: Allow anyone to read the product list and individual products
    match /products/{productId} {
      allow get, list: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'supervisor'];
    }

    // PROTECTED: Only authenticated users can read their own user data
    //            Only admins can write to the users collection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
